<section>
    <h2 id="new-gift-btn" data-bs-toggle="modal" data-bs-target="#gift-modal">Create New Gift</h2>

    <form class="new-gift-form">
        <div>
            <label for="item_desc">Title</label>
            <input type="text" id="item_desc" name="item_desc" />
        </div>
        <div>
            <label for="item_img_url">URL</label>
            <input id="item_img_url" name="item_img_url" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if gifts.length}}
<section>
    <h2>Your List</h2>
    {{#each gifts as |gift|}}
        {{> gift-info gift}}
        <br />
        <button type="submit" class="delete-gift-btn btn">Delete Gift</button>
    {{/each}}
</section>
{{/if}}

{{> add-gift-modal}}

<script src="/javascript/delete-gift.js"></script>