
<button id="new-gift-btn" data-bs-toggle="modal" class="btn btn-primary" data-bs-target="#gift-modal">
    Create New Gift
</button>
<button id="new-friend-btn" data-bs-toggle="modal" class="btn btn-primary" data-bs-target="#friend-modal">
    Add Friend
</button>
{{#if gifts.length}}
<section class="container">
    <h2>Your List</h2>
    <div id="gifts-container">
        <div class="row">
            <div class="col-9">
                <div class="row">
                    {{#each gifts as |gift|}}
                    <div class="col-5">     
                        {{> gift-info gift}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <h2>Your Friends</h2>
    <div id="friend-container">
        <div class="row">
            {{#each friends as |friend|}}
            <div class="col-3">
                {{> friend-info friend}}
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script src="/javascript/delete-gift.js"></script>
{{/if}}

{{!-- friend and gift modal popup --}}
{{> add-gift-modal}}
{{> add-friend-modal}}
